<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


        <LinearLayout
          android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:text="loading"
                android:id="@+id/loading_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginLeft="@dimen/px_10"
                android:text="只显示标题"
                android:id="@+id/title_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginLeft="@dimen/px_10"
                android:text="只显示内容"
                android:id="@+id/message_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginLeft="@dimen/px_10"
                android:text="异常样式"
                android:id="@+id/errory_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/px_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/warning_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="警告样式"/>

        <Button
            android:id="@+id/success_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:text="成功完成样式"/>

        <Button
            android:id="@+id/headimg_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:text="自定义头部图像"/>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="@dimen/px_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/submit_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认事件绑定"/>

        <Button
            android:id="@+id/cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:text="取消事件绑定"/>

        <Button
            android:id="@+id/submit_switch_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:text="确认后切换对话框"/>


    </LinearLayout>
</LinearLayout>
