<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/px_65"
              android:background="@color/color_bilibili"
              android:orientation="vertical">

    <TextView
        android:id="@+id/item_bilibili_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_60"
        android:background="@color/color_bilibili"
        android:gravity="center"
        android:paddingBottom="@dimen/px_10"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingTop="@dimen/px_10"
        android:text="全站"
        android:textColor="@color/color_fff"/>


    <TextView
        android:id="@+id/item_bilibili_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_5"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="@color/color_fff"></TextView>

</LinearLayout>
