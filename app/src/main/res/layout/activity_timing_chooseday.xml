                android:paddingLeft="@dimen/px_28"
                android:paddingRight="@dimen/px_28">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="周五"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>


                <ImageView
                    android:id="@+id/chooseday_day5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xz"
                    android:visibility="invisible"/>


            </LinearLayout>

            <include layout="@layout/include_line"></include>

            <LinearLayout
                android:id="@+id/chooseday_day6_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/color_fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_28"
                android:paddingRight="@dimen/px_28">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="周六"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>


                <ImageView
                    android:id="@+id/chooseday_day6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xz"
                    android:visibility="invisible"/>


            </LinearLayout>

            <include layout="@layout/include_line"></include>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/px_30"/>
</LinearLayout>
