<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_background"
              android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/chooseday_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/chooseday_day0_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/color_fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_28"
                android:paddingRight="@dimen/px_28">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="周日"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>


                <ImageView
                    android:id="@+id/chooseday_day0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xz"
                    android:visibility="invisible"/>


            </LinearLayout>

            <include layout="@layout/include_line"></include>

            <LinearLayout
                android:id="@+id/chooseday_day1_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/color_fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_28"
                android:paddingRight="@dimen/px_28">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="周一"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>


                <ImageView
                    android:id="@+id/chooseday_day1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xz"
                    android:visibility="invisible"/>


            </LinearLayout>

            <include layout="@layout/include_line"></include>

            <LinearLayout
                android:id="@+id/chooseday_day2_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/color_fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_28"
                android:paddingRight="@dimen/px_28">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="周二"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>


                <ImageView
                    android:id="@+id/chooseday_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xz"
                    android:visibility="invisible"/>


            </LinearLayout>

            <include layout="@layout/include_line"></include>

            <LinearLayout
                android:id="@+id/chooseday_day3_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/color_fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_28"
                android:paddingRight="@dimen/px_28">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="周三"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>


                <ImageView
                    android:id="@+id/chooseday_day3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xz"
                    android:visibility="invisible"/>


            </LinearLayout>

            <include layout="@layout/include_line"></include>

            <LinearLayout
                android:id="@+id/chooseday_day4_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/color_fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_28"
                android:paddingRight="@dimen/px_28">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="周四"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>


                <ImageView
                    android:id="@+id/chooseday_day4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xz"
                    android:visibility="invisible"/>


            </LinearLayout>

            <include layout="@layout/include_line"></include>

            <LinearLayout
                android:id="@+id/chooseday_day5_ly"
