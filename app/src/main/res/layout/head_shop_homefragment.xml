<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--轮播图-->
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_depth"
        style="@style/BannerDefaultStyle"
        app:banner_transitionEffect="depth"/>

    <com.example.lql.testdemo.veiw.SwitchViewGroup
        android:id="@+id/switchViewGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_view_group_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_15"
        android:background="@color/color_fff"
        android:paddingLeft="10dp"
        android:visibility="visible"
        >

    </com.example.lql.testdemo.veiw.SwitchViewGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/px_15"
        android:paddingTop="@dimen/px_15"
        android:text="热门商品"
        android:textSize="@dimen/px_32"/>


</LinearLayout>
